# Variables de entorno para el proyecto

# General
PROJECT_NAME=deconfianza
ENVIRONMENT=dev

# Frontend
FRONTEND_PORT=5173
API_URL=http://localhost:8000/api
LANDING_ONLY_MODE=false
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Backend
BACKEND_PORT=8000
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
POSTGRES_HOST=db-dev
POSTGRES_PORT=5432
POSTGRES_DB=deconfianza_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# CORS/CSRF
# En dev, DEBUG=True habilita CORS_ALLOW_ALL_ORIGINS automáticamente, pero puedes forzarlo por env.
CORS_ALLOW_ALL_ORIGINS=false
# Lista separada por comas
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
# Opcional: necesarias cuando usas HTTPS y dominios reales
CSRF_TRUSTED_ORIGINS=https://deconfianza.com.ar,https://www.deconfianza.com.ar,https://test.deconfianza.com.ar

# MercadoPago (Sandbox para desarrollo)
MERCADOPAGO_ACCESS_TOKEN=TEST-1234567890-abcdef-your-access-token-here
MERCADOPAGO_PUBLIC_KEY=TEST-abcdef-1234567890-your-public-key-here
MERCADOPAGO_SANDBOX=true

# URLs para redirección
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Copia este archivo a .env para usarlo localmente